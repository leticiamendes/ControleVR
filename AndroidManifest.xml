<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vale.controlevr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.vale.controlevr.screens.SplashActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.vale.controlevr.screens.SaldoActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.vale.controlevr.screens.DataRecebimentoActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.vale.controlevr.screens.ValorGastoActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.vale.controlevr.screens.DiasUsarActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.vale.controlevr.screens.PrincipalActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.vale.controlevr.adapter.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
